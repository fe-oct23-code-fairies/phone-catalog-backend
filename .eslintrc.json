{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "ignorePatterns": [".eslintrc.js"],
  "parser": "@typescript-eslint/parser",
  "extends": "@mate-academy/eslint-config",
  "overrides": [
    {
      "env": {
        "node": true
      },
      "files": [".eslintrc.{js,cjs}"],
      "parserOptions": {
        "sourceType": "script"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-shadow": "off",
    "max-len": [
      "error",
      {
        "ignoreTemplateLiterals": true,
        "ignoreComments": true
      }
    ]
  }
}
